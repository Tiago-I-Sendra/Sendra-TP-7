           cout<<"Primer Lado:";
				   cin>>Lado0;
				   cout<<"Segundo Lado:";
				   cin>>Lado1;
           cout<<"Tercer Lado:";
				   cin>>Lado2;
                  }
	void LadoMayor(){
           if(Lado0 > Lado1){medidor = B + 1;}
           if(Lado0 > Lado2){medidor = B + 1;}

           if(medidor == 2){cout<<"El Primer Lado es mayor"<<endl;}
           else medidor= 0;if(Lado1 > Lado0){medidor = B + 1;
                if(Lado1 > Lado2){medidor = B + 1;}

           if(medidor == 2){cout<<"El Segundo Lado es mayor"<<endl;}
                                            }
           else medidor= 0;if(Lado2 > Lado0){medidor = B + 1;
                if(Lado2 > Lado1){medidor = B + 1;}

           if(medidor == 2){cout<<"El Tercer Lado es mayor"<<endl;}
                                            }
	                }
	};

int main(int argc, char *argv[])
{
