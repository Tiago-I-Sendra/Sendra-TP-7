#include <iostream.h>
#include <string.h>
class Cuadrado
	{
	
private:
	  int Lado0;
    int Lado1;
    int Lado2;
	  int Lado3;
public:
	void Atributos(){
           cout<<"Primer Lado:";
				   cin>>Lado0;
				   cout<<"Segundo Lado:";
				   cin>>Lado1;
           cout<<"Tercer Lado:";
				   cin>>Lado2;
           cout<<"Cuarto Lado:";
				   cin>>Lado3;
                  }
	void LadoMayor(){
           if(Lado0 > Lado1 && Lado0 > Lado2){cout<<"El Primer Lado es mayor"<<endl;}
           if(Lado1 > Lado0 && Lado1 > Lado2){cout<<"El Segundo Lado es mayor"<<endl;}
           if(Lado2 > Lado1 && Lado2 > Lado1){cout<<"El Tercer Lado es mayor"<<endl;}
	                }
     void Equilátero(){
           if(Lado0==Lado1 && Lado0==Lado2){cout<<"es equilátero"<<endl;}
           else cout<<"no es equilátero"<<endl;
	                  }
	};

int main(int argc, char *argv[])
{
	Triangulo Zona;
	Zona.Atributos();
	Zona.LadoMayor();
    Zona.Equilatero();
}
